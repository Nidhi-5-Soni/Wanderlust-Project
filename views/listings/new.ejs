<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br/>
    <h3>Create a new Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3" >
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" placeholder="add a catchy title" type="text" class="form-control" required>
            <div class="valid-feedback">Title looks good</div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]" type="text" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-label">Upload Listing Image</lable>
            <input name="listing[image][url]" type="file" class="form-control" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
               <lable for="price" class="form-label">Price</lable>
               <input name="listing[price]" placeholder="enter price" class="form-control" required>
               <div class="invalid-feedback">Please enter a valid price</div>
        </div>
            <div class="mb-3 col-md-8">
               <lable for="location" class="form-label">Location</lable>
               <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
               <div class="invalid-feedback">Please enter a valid location</div>
        </div>
        </div>
        <div class="mb-3">
            <lable for="country" class="form-label">Country</lable>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter a valid country name</div>
        </div>
        <label class="form-label fw-bold">Category</label>
        <select name="listing[category]" required>
        <option value="">Select category</option>
        <option value="Trending">Trending</option>
        <option value="Rooms">Rooms</option>
        <option value="Iconic Cities">Iconic Cities</option>
        <option value="Mountains">Mountains</option>
        <option value="Amazing Pool">Amazing Pool</option>
        <option value="Camping">Camping</option>
        <option value="Farms">Farms</option>
        <option value="Arctic">Arctic</option>
        <option value="Castle">Castle</option>
        <option value="Domes">Domes</option>
        <option value="Boats">Boats</option>
</select>

        <br><br/>
        <button class="btn btn-dark add-btn">Add</button>
        <br><br/>
    </form>
    </div>
</div>
