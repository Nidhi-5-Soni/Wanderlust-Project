<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }
  .search-btn i {
    margin-right: 0.4rem;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    font-size: 1rem;
  }

  /* ------------------ MOBILE FIX ------------------ */
  @media (max-width: 768px) {

    /* Center all collapsed content */
    #navbarNavAltMarkup {
      text-align: center;
    }

    /* Search bar full width under the navbar brand */
    .search-wrapper {
      width: 100%;
      display: flex;
      justify-content: center;
      margin-top: 12px;
      margin-bottom: 10px;
    }

    .search-inp {
      width: 70% !important;
      max-width: 260px !important;
      padding: 0.45rem 0.9rem;
      font-size: 0.9rem;
    }

    .search-btn {
      padding: 0.4rem 0.9rem !important;
      font-size: 0.85rem;
    }

    /* Auth buttons stacking */
    .auth-section {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 6px;
      margin-top: 8px;
    }

    .auth-section .nav-link {
      padding: 7px 12px;
    }
    .search-wrapper form {
    display: flex;
    flex-wrap: nowrap; /* Prevent wrapping */
    justify-content: center;
    width: 100%;
  }

  .search-inp {
    flex: 1 1 auto; /* Grow to fill available space */
    max-width: 260px;
  }

  .search-btn {
    flex-shrink: 0; /* Prevent button from shrinking */
    margin-left: 6px;
  }

  /* Auth buttons full width */
  .auth-section .nav-link {
    text-align: center;
  }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- Brand -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <!-- Toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <!-- LEFT: Explore -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- CENTER: Search Bar -->
      <div class="search-wrapper mx-auto">
        <form class="d-flex" role="search" action="/listings" method="GET">
          <input class="form-control me-2 search-inp" type="search" name="search"
            placeholder="Search Destinations" value="<%= search || '' %>" />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </form>
      </div>

      <!-- RIGHT: Login / Signup / Logout -->
      <div class="navbar-nav ms-auto auth-section">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>

        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>SignUp</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %>

        <% if (currUser) { %>
          <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>

    </div>
  </div>
</nav>
